<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/welcome_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Scan setting"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/welcome_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#7b7b7b"
        app:layout_constraintTop_toBottomOf="@id/welcome_title_tv"
        tools:layout_editor_absoluteX="4dp" />


    <CheckBox
        android:id="@+id/checkbox_have_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lines="2"
        android:text="@string/use_camera"
        android:textSize="@dimen/checkbox_text_size"
        app:layout_constraintStart_toStartOf="@+id/welcome_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/welcome_view" />

    <Button
        android:id="@+id/ok_button_scan_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:text="@string/ok"
        app:layout_constraintStart_toStartOf="@+id/checkbox_have_scanner"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_have_scanner" />
</androidx.constraintlayout.widget.ConstraintLayout>